(jbuild_version 1)

(library
 ((name            yaks_codec)
  (public_name     yaks-codec)
  (libraries       (atdgen))
  ))

(rule
 ((targets (fecmd_j.ml
            fecmd_j.mli))
  (deps    (fecmd.atd))
  (action  (run atdgen -j -j-std ${^}))))

(rule
 ((targets (fecmd_b.ml
            fecmd_b.mli))
  (deps    (fecmd.atd))
  (action  (run atdgen -b ${^}))))

(rule
 ((targets (fecmd_t.ml
            fecmd_t.mli))
  (deps    (fecmd.atd))
  (action  (run atdgen -t ${^}))))